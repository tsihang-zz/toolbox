ifeq ($(RTE_SDK),)
$(error "Please define RTE_SDK environment variable")
endif

# Default target, can be overriden by command line or environment
RTE_TARGET ?= x86_64-native-linuxapp-gcc

include $(RTE_SDK)/mk/rte.vars.mk

# binary name
APP = napd

#SRCS_MPM-y := mpm.c mpm_ac.c mpm_hs.c
SRCS_MPM-y := 

# all source are stored in SRCS-y
SRCS-y := main.c init.c netdev.c netdev_pcap.c dp.c dpdk.c dsa.c\
	acl.c iface.c map.c rule.c

CFLAGS += $(WERROR_FLAGS)
CFLAGS += -g -O3 --std=gnu99 $(CFLAGS_SRC)
CFLAGS += -D_GNU_SOURCE -D__USE_GNU -D__STDC_FORMAT_MACROS\
		  -DHAVE_BACKTRACE\
		  -DHAVE_PCAP\
		  -DHAVE_ADVANCED_TMR\
		  -DHAVE_HYPERSCAN\
		  -DHAVE_DPDK
CFLAGS += -DHAVE_SF1500
#CFLAGS += -DHAVE_MPM
#CFLAGS += -DBUILD_DEBUG
			  
CFLAGS += -I$(SRCDIR)\
	  -I$(SRCDIR)/include\
	  -I$(SRCDIR)/../oryx\
	  -I$(SRCDIR)/../oryx/osih\
	  -I$(SRCDIR)/../quagga\
	  -I$(SRCDIR)/../ndev\
	  -I/usr/include/hs

#LDFLAGS += -lhs -lhs_runtime
LDFLAGS += -ldl -lpthread -lm -lrt -lpcap -lstdc++

LDLIBS += -L$(subst nap,oryx,$(RTE_OUTPUT))/lib
LDLIBS += -loryx

LDLIBS += -L$(subst nap,ndev,$(RTE_OUTPUT))/lib
LDLIBS += -lndev

LDLIBS += -L$(subst nap,quagga,$(RTE_OUTPUT))/lib
LDLIBS += -lquagga

include $(RTE_SDK)/mk/rte.extapp.mk

